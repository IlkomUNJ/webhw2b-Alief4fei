<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AoD | Cart</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="flex flex-col min-h-screen bg-gradient-to-br from-white via-red-50 to-red-100 text-gray-800">
    <!-- Navbar -->
    <nav class="sticky top-0 z-50 bg-white shadow-sm">
      <div class="max-w-6xl mx-auto px-6 py-4 flex flex-col md:flex-row md:items-center md:justify-between">
        <!-- Logo -->
        <div class="flex items-center justify-between w-full md:w-auto mb-2 md:mb-0">
          <a href="/home" class="flex items-center space-x-2">
            <img src="/images/logo_AoD side.png" alt="AoD Logo" class="h-10" />
          </a>
        </div>

        <!-- Menu -->
        <div class="flex flex-col md:flex-row md:items-center gap-4 md:gap-8">
          <a href="/home" class="relative text-gray-700 hover:text-red-600 transition group">
            Home
            <span class="absolute left-0 bottom-0 w-0 h-[2px] bg-red-600 transition-all duration-300 group-hover:w-full"></span>
          </a>

          <a href="/shop" class="relative text-gray-700 hover:text-red-600 transition group">
            Shop
            <span class="absolute left-0 bottom-0 w-0 h-[2px] bg-red-600 transition-all duration-300 group-hover:w-full"></span>
          </a>

          <a href="/about" class="relative text-gray-700 hover:text-red-600 transition group">
            About
            <span class="absolute left-0 bottom-0 w-0 h-[2px] bg-red-600 transition-all duration-300 group-hover:w-full"></span>
          </a>

          <a href="/wishlist" class="relative text-gray-700 hover:text-red-600 transition group">
            Wishlist
            <span class="absolute left-0 bottom-0 w-0 h-[2px] bg-red-600 transition-all duration-300 group-hover:w-full"></span>
          </a>

          <a href="/cart" class="relative text-red-600 font-medium group">
            Cart
            <span class="absolute left-0 bottom-0 w-full h-[2px] bg-red-600"></span>
          </a>
        </div>

        <!-- Search & Account -->
        <div class="flex items-center gap-2">
          <input
            id="global-search"
            type="text"
            placeholder="Search..."
            class="px-3 py-2 border rounded-md text-sm w-40 md:w-48 focus:outline-red-600"
          />
          <button
            id="search-btn"
            class="px-3 py-2 bg-gray-200 text-gray rounded-md text-sm hover:bg-red-700 hover:text-white transition"
          >
            Search
          </button>
          <a href="/login-seller">
            <img
              src="/images/account_logo.png"
              alt="Account"
              class="h-8 rounded-full hover:opacity-80"
            />
          </a>
        </div>
      </div>
    </nav>

    <!-- Cart Section -->
    <main class="flex-grow max-w-6xl mx-auto px-6 py-12">
      <h1 class="text-3xl font-bold text-center text-gray-800 mb-10">Your Cart</h1>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Cart Items -->
        <div id="cart-items" class="lg:col-span-2 space-y-4">
          <!-- JS will render cart items -->
          <div class="text-center text-gray-500">Loading your cart...</div>
        </div>

        <!-- Summary -->
        <aside
          id="cart-summary"
          class="bg-white shadow-lg rounded-xl p-6 border border-red-100 h-fit sticky top-24"
        >
          <h2 class="text-xl font-semibold mb-4 text-gray-800">Order Summary</h2>
          <p class="text-gray-500 text-sm mb-6">Check your order before proceeding to checkout.</p>

          <!-- JS renders summary content -->
        </aside>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white">
      <div class="max-w-6xl mx-auto py-8 px-6 flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-sm text-gray-300">
          &copy; 2025 AoD Store â€” All rights reserved.
        </p>
        <div class="flex gap-6">
          <a href="#" class="hover:text-red-400 transition">Instagram</a>
          <a href="#" class="hover:text-red-400 transition">Facebook</a>
          <a href="#" class="hover:text-red-400 transition">Twitter</a>
        </div>
      </div>
    </footer>

    <script src="/js/app.js" defer></script>
  </body>
</html>
